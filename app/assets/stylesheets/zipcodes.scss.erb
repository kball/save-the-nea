.text-centered {
  text-align: center;
}

.hero-photo {
  background-image: image-url("index/background.svg");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: top center;
  height: 100vh;
}

.opacity-layer {
  position: absolute;
  z-index: 1;
  height: 100%;
  width: 100%;
  color: #333;
}

.zipcode-form-container {
  position: absolute;
  max-width: 50%;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}
.pre-hover, .post-hover {
  color: #fff;
}

.post-hover {
  display: none;
}

.zipcode-search {
  padding: 30px 30px 30px 50px;
  margin-top: 30px;
  margin-left: 10%;
  font-size: 24px;
  width: 80%;
  
  background-image: image-url('index/search.svg');
  background-repeat: no-repeat;
  background-position: 10px center;


  &::-webkit-input-placeholder {
    opacity: 0;
  }
  &::-moz-placeholder {
    opacity: 0;
  }
  &:-ms-input-placeholder {
    opacity: 0;
  }
  &:-moz-placeholder {
    opacity: 0;
  }
  &::placeholder {
    opacity: 0;
  }
}

.zipcode-search:focus {
  &::-webkit-input-placeholder {
    opacity: 1;
  }
  &::-moz-placeholder {
    opacity: 1;
  }
  &:-ms-input-placeholder {
    opacity: 1;
  }
  &:-moz-placeholder {
    opacity: 1;
  }
  &::placeholder {
    opacity: 1;
  }
}

.hero-footer {
  width: 100%;
  min-height: 51px;
  background-color: #afafaf;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}
.hero-footer-link {
  color: #4a4a4a;
}

.hero-logo {
  color: #fff;
  text-transform: uppercase;
  font-size: 48px;
  position: absolute;
  top: 5px;
  z-index: 2;
  line-height: 1.1;
  .the-arts {
    display: block;
    font-size: 24px;
    position: relative;
    left: -5px;
  }
}
