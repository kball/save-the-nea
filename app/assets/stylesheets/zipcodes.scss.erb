.text-centered {
  text-align: center;
}

.hero-photo {
  background-image: image-url("index/background.svg");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: top center;
  height: 100vh;
}

.opacity-layer {
  position: absolute;
  z-index: 1;
  height: 100%;
  width: 100%;
  background-color: #333;
  opacity: 0;
}
.zipcode-form-container {
  position: absolute;
  width: 100%;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  z-index: 2;
}
.pre-hover, .post-hover {
  color: #fff;
  text-align: center;
}

.post-hover {
  display: none;
}

.zipcode-search {
  padding: 30px 30px 30px 50px;
  margin-top: 30px;
  margin-left: auto;
  margin-right: auto;
  font-size: 24px;
  max-width: 400px;
  width: 90%;
  
  background-image: image-url('index/search.svg');
  background-repeat: no-repeat;
  background-position: 10px center;


  &::-webkit-input-placeholder {
    opacity: 0;
  }
  &::-moz-placeholder {
    opacity: 0;
  }
  &:-ms-input-placeholder {
    opacity: 0;
  }
  &:-moz-placeholder {
    opacity: 0;
  }
  &::placeholder {
    opacity: 0;
  }
}

.hero-footer {
  width: 100%;
  min-height: 51px;
  background-color: #afafaf;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.hero-footer-link {
  color: #4a4a4a;
  position: absolute;
  left: 50%;
  bottom: 10px;
  transform: translateX(-50%);
  &:hover {
    color: #4a4a4a;
  }
}

.hero-logo {
  color: #fff;
  text-transform: uppercase;
  font-size: 48px;
  position: absolute;
  top: 5px;
  z-index: 2;
  line-height: 1.1;
  .the-arts {
    display: block;
    font-size: 24px;
    position: relative;
    left: -5px;
  }
}
.hero-photo.is-opaque {
  .opacity-layer {
    opacity: 1 !important;
  }
  background-color: #afafaf;
  .pre-hover {
    display: none !important;
  }
  .post-hover {
    display: block !important;
  }
}
.hero-photo.is-opaque, .hero-photo.show-placeholder {
  .zipcode-search {
    &::-webkit-input-placeholder {
      opacity: 0.7;
    }
    &::-moz-placeholder {
      opacity: 0.7;
    }
    &:-ms-input-placeholder {
      opacity: 0.7;
    }
    &:-moz-placeholder {
      opacity: 0.7;
    }
    &::placeholder {
      opacity: 0.7;
    }
  }
}

